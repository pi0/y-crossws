{
  "name": "y-crossws",
  "version": "0.0.0",
  "description": "yjs websocket server powered by crossws, works on Node.js, Deno, Bun, Cloudflare Workers and more without any framework dependency and compatible with unmodified y-websocket client provider.",
  "keywords": [
    "yjs",
    "unjs",
    "crossws",
    "websocket",
    "server",
    "node",
    "deno",
    "bun",
    "cloudflare",
    "workers"
  ],
  "repository": "pi0/y-crossws",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./provider": {
      "types": "./dist/provider.d.mts",
      "default": "./dist/provider.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "lint": "eslint . && prettier -c src playground",
    "lint:fix": "automd && eslint . --fix && prettier -w src playground",
    "prepack": "pnpm build",
    "play:bun": "bun run --watch ./playground/bun.ts",
    "play:node": "node ./playground/node.mjs",
    "release": "pnpm test && changelogen --release && npm publish && git push --follow-tags",
    "test": "pnpm lint && pnpm test:types",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "lib0": "^0.2.96",
    "y-protocols": "^1.0.5"
  },
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "@types/node": "^22.1.0",
    "@types/ws": "^8.5.12",
    "automd": "^0.3.8",
    "changelogen": "^0.5.5",
    "crossws": "^0.2.4",
    "eslint": "^9.8.0",
    "eslint-config-unjs": "^0.3.2",
    "jiti": "^2.0.0-beta.3",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "unbuild": "^3.0.0-rc.7",
    "ws": "^8.18.0",
    "yjs": "^13.6.18"
  },
  "peerDependencies": {
    "crossws": "^0.2.4",
    "yjs": "^13.5.6"
  },
  "packageManager": "pnpm@9.7.0"
}
